<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="bar" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SecretaryMenuBarController">
   <menus>
      <Menu mnemonicParsing="false" text="File">
        <items>
            <MenuItem mnemonicParsing="false" onAction="#message" text="Message" />
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
        </items>
      </Menu>
      
      <Menu mnemonicParsing="false" text="Classes">
        <items>
            <MenuItem mnemonicParsing="false" onAction="#DefineClasses" text="Create new class" />
        </items>
        <items>
            <MenuItem mnemonicParsing="false" onAction="#DeleteClass" text="Delete class" />
        </items>
      </Menu>
      
      <Menu mnemonicParsing="false" text="Re-Assign">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#ChangeStudentAssignment" text="Student" />
            <MenuItem mnemonicParsing="false" onAction="#ChangeTeacherAssignment" text="Teacher" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Semester">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#CreateSemester" text="Create" />
            <MenuItem mnemonicParsing="false" onAction="#AttachCurseToClass" text="Attach curse to Class" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Connection">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="View">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#ViewPerInfo" text="Personal information" />
        </items>
      </Menu>
   </menus>
</MenuBar>
